extends layout

block content
    .container
        form(method='post', action='contact/send')
            h1 Contact Us
            .form-group
                label Name
                input.form-control(type='text', name='name', placeholder='Please Enter Your Name', required)
            .form-group
                label Email
                input.form-control(type='email', name='email', placeholder='Please Enter Your Email', required)
            .form-group
                label Message
                textarea.form-control(name='message', placeholder='Enter Your Message Here')
            button.btn.btn-default(type='submit') Submit
